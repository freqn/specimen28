
<% if @species.errors.any? %>
  <h3>FIX THESE ERRORS: </h3>
    <% @species.errors.full_messages.each  do |error|%>
      <p class="error">* <%= error %></p>
    <% end %>
<% end %>


<form action="/species/<%= @species.id %>" method="post">
<input name="_method" type="hidden" value="patch">
    <label for="species_name">Name</label>
    <input id="species_name" name="name" type="text" value="<%= @species.name %>">
    <button>Update</button>
</form>

<p><%= link_to 'Species', "/species" %></p>