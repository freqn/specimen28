<h1>Edit <%= @sighting.date %></h1>

<form action="/species/<%= @sighting.species_id %>/sightings/<%= @sighting.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <div><label for="date">Date</label>
  <input id="date" name="date" type="text" value="<%= @sighting.date%>"></div>
  <div><label for="date">Lat</label>
  <input id="latitude" name="latitude" type="text" value="<%= @sighting.latitude%>"></div>
  <div><label for="date">Lon</label>
  <input id="longitude" name="longitude" type="text" value="<%= @sighting.longitude%>"></div>
  <div><label for="Notes">Notes</label>
  <input id="notes" name="notes" type="text" placeholder="optional" value="<%= @sighting.notes%>"></div>
  <button>Update</button>
</form>